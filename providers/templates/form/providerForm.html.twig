<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
<div class="container" style="margin-top: 20px;">
    <h1>{% if form.providerId.vars.value != '' %}Edit {% else %} New {% endif %}Provider</h1>

    {{ form_start(form,{'attr': {'id': 'provider_type_form'}}) }}
    <div style="display: flex; flex-direction: row;">
        <div style="display: flex; flex-direction: row;">
            <h4>ProviderType: </h4>
            <select id="selectProviderTypeId" class="custom-select" style="margin-left: 15px;">
                {% for key , providerType in selectProviderTypes %}
                    <option value="{{ key }}"
                            {% if key == form.providerTypeId.vars.value %}selected{% endif %}>{{ providerType }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-check" style="margin-left: auto;">
            <label class="form-check-label" for="exampleCheck1">Active: </label>
            {{ form_widget(form.active, {'attr': {'class': ''}}) }}
        </div>
    </div>
    {{ form_widget(form.providerId, {'attr': {'class': 'hidden'}}) }}
    {{ form_widget(form.providerTypeId, {'attr': {'class': 'hidden'}}) }}
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        {{ form_widget(form.providerName, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter Email'}}) }}
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Phone number</label>
        {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group" style="margin-top: 20px;">
        {{ form_widget(form.submit, {'attr': {'class': 'form-control btn btn-primary'}}) }}
    </div>
    {{ form_end(form) }}
</div>
<script>
    document.getElementById("provider_type_form_submit").addEventListener("click", (event) => {
        event.preventDefault();
        let providerTypeId = document.getElementById("selectProviderTypeId").value;
        document.getElementById("provider_type_form_providerTypeId").value = providerTypeId;

        document.getElementById("provider_type_form").submit();
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>